{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "typography": {
      "writingMode": false,
      "fluid": false,
      "fontSizes": [
        {
          "fluid": false,
          "name": "Small",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "1.1rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "1.38rem",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "2.5rem",
          "slug": "x-large"
        },
        {
          "name": "Extra Extra Large",
          "size": "3.15rem",
          "slug": "xx-large"
        }
      ],
      "fontFamilies": [
        {
          "name": "Averta",
          "slug": "manrope",
          "fontFamily": "Averta, sans-serif",
          "fontFace": [
            {
              "src": ["file:./assets/fonts/Averta-Regular.otf"],
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontFamily": "Averta"
            },
            {
              "src": ["file:./assets/fonts/Averta-Light.otf"],
              "fontWeight": "200",
              "fontStyle": "normal",
              "fontFamily": "Averta"
            },
            {
              "src": ["file:./assets/fonts/Averta-Bold.otf"],
              "fontWeight": "800",
              "fontStyle": "normal",
              "fontFamily": "Averta"
            },
            {
              "src": ["file:./assets/fonts/Averta-RegularItalic.otf"],
              "fontWeight": "400",
              "fontStyle": "italic",
              "fontFamily": "Averta"
            },
            {
              "src": ["file:./assets/fonts/Averta-LightItalic.otf"],
              "fontWeight": "200",
              "fontStyle": "italic",
              "fontFamily": "Averta"
            }
          ]
        }
      ]
    },
    "color": {
      "palette": [
        {
          "color": "#FFFFFF",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#111111",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#68497D",
          "name": "Accent",
          "slug": "accent"
        }
      ]
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "name": "Tiny",
          "size": "10px",
          "slug": "20"
        },
        {
          "name": "X-Small",
          "size": "20px",
          "slug": "30"
        },
        {
          "name": "Small",
          "size": "30px",
          "slug": "40"
        },
        {
          "name": "Regular",
          "size": "clamp(30px, 5vw, 50px)",
          "slug": "50"
        },
        {
          "name": "Large",
          "size": "clamp(30px, 7vw, 70px)",
          "slug": "60"
        },
        {
          "name": "X-Large",
          "size": "clamp(50px, 7vw, 90px)",
          "slug": "70"
        },
        {
          "name": "XX-Large",
          "size": "clamp(70px, 10vw, 140px)",
          "slug": "80"
        },
        {
          "name": "XXX-Large",
          "size": "clamp(120px, 12vw, 200px)",
          "slug": "90"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "layout": {
      "contentSize": "65rem",
      "wideSize": "75rem"
    }
  },
  "styles": {
    "spacing": {
      "blockGap": "0",
      "padding": {
        "top": "5vh",
        "right": "var(--wp--preset--spacing--40)",
        "bottom": "5vh",
        "left": "var(--wp--preset--spacing--40)"
      }
    },
    "typography": {
      "fontSize": "var:preset|font-size|medium"
    },
    "blocks": {
      "core/post-title": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--40)"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--30)",
            "bottom": "var(--wp--preset--spacing--20)"
          }
        }
      },
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--20)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header-ca",
      "title": "Capçalera (CA)"
    },
    {
      "area": "header",
      "name": "header-es_es",
      "title": "Capçalera (ES)"
    },
    {
      "area": "header",
      "name": "header-en_us",
      "title": "Capçalera (EN)"
    }
  ],
  "customTemplates": [
    {
      "name": "full-page",
      "title": "Pantalla completa",
      "postTypes": ["page"]
    },
    {
      "name": "page-ca",
      "title": "Pàgines (CA)",
      "postTypes": ["page"]
    },
    {
      "name": "page-es_es",
      "title": "Pàgines (ES)",
      "postTypes": ["page"]
    },
    {
      "name": "page-en_us",
      "title": "Pàgines (EN)",
      "postTypes": ["page"]
    },
    {
      "name": "single-work-ca",
      "title": "Obra (CA)",
      "postTypes": ["work"]
    },
    {
      "name": "single-work-es_es",
      "title": "Obra (ES)",
      "postTypes": ["work"]
    },
    {
      "name": "single-work-en_us",
      "title": "Obra (EN)",
      "postTypes": ["work"]
    },
    {
      "name": "single-ca",
      "title": "Esdeveniment (CA)",
      "postTypes": ["post"]
    },
    {
      "name": "single-es_es",
      "title": "Esdeveniment (ES)",
      "postTypes": ["post"]
    },
    {
      "name": "single-en_us",
      "title": "Esdeveniment (EN)",
      "postTypes": ["post"]
    }
  ]
}
